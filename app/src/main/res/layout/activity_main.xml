<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="12"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="12"
        android:weightSum="12"
        android:orientation="vertical"
        >


        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="203dp"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:rotation="270"
            app:srcCompat="@drawable/soccer_field" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="FOOTBOOCKING"
            android:textSize="35dp"
            android:layout_weight="1"
            android:layout_gravity="center"/>

        <Button
            android:id="@+id/registro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_awesome"
            android:backgroundTint="@color/black"
            android:layout_weight="1"
            android:text="Registrate con un Email ID"
            android:onClick="IrRegistrar"
            />

        <Button
            android:id="@+id/googleRegi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font_awesome"
            android:backgroundTint="@color/white"
            android:textColor="@color/black"
            android:layout_weight="1"
            android:text="Registrate con \uf1a0oogle"
            android:onClick="google"
            />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:onClick="LogIn"
            android:text="Ya tienes una cuenta? Iniciar sesion" />

    </LinearLayout>


</LinearLayout>